# ============================================
# Environment Configuration
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration (MySQL)
# For XAMPP: DB_HOST=localhost, DB_USER=root, DB_PASS=
# For Docker: DB_HOST=mysql, DB_USER=coffeeuser, DB_PASS=coffeepass
# ============================================
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=coffee-shop
DB_PORT=3306

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PUBLIC_TOKEN=public-token-for-guests

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# Startup Configuration
# Set to 'true' to auto-seed database on server start
# Set to 'false' to skip seeding
# ============================================
Startup=true